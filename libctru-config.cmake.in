@PACKAGE_INIT@

set(CMAKE_CONFIG_PREFIX @PACKAGE_CONFIG_PREFIX@)

include(${CMAKE_CONFIG_PREFIX}/libctru-targets.cmake OPTIONAL)

if(TARGET CTR::libctru)
	get_property(LIBCTRU_LIBRARY TARGET CTR::libctru PROPERTY LOCATION)
	get_property(LIBCTRU_INCLUDE_DIR TARGET CTR::libctru PROPERTY INTERFACE_INCLUDE_DIRECTORIES)
endif()

include(${CMAKE_ROOT}/Modules/FindPackageHandleStandardArgs.cmake)

find_package_handle_standard_args(libctru DEFAULT_MSG LIBCTRU_LIBRARY LIBCTRU_INCLUDE_DIR)
