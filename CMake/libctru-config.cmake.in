set(LIBCTRU_VERSION @LIBCTRU_VERSION@)

@PACKAGE_INIT@

get_filename_component(CURDIR "${CMAKE_CURRENT_LIST_FILE}" DIRECTORY)

include(${CURDIR}/libctru-targets.cmake)

if(TARGET CTR::CTRU)
	set_property(TARGET CTR::CTRU PROPERTY IMPORTED_LINK_INTERFACE_LANGUAGES "C")
	set_property(TARGET CTR::CTRU PROPERTY IMPORTED_LINK_INTERFACE_LANGUAGES_DEBUG "C")
	set_property(TARGET CTR::CTRU PROPERTY IMPORTED_LINK_INTERFACE_LANGUAGES_RELEASE "C")
	set_property(TARGET CTR::CTRU PROPERTY IMPORTED_LINK_INTERFACE_LANGUAGES_RELWITHDEBINFO "C")
	set_property(TARGET CTR::CTRU PROPERTY IMPORTED_LINK_INTERFACE_LANGUAGES_MINSIZEREL "C")

	get_property(LIBCTRU_LIBRARY TARGET CTR::CTRU PROPERTY LOCATION)
	get_property(LIBCTRU_INCLUDE_DIR TARGET CTR::CTRU PROPERTY INTERFACE_INCLUDE_DIRECTORIES)
endif()

include(${CMAKE_ROOT}/Modules/FindPackageHandleStandardArgs.cmake)

find_package_handle_standard_args(libctru
	FOUND_VAR LIBCTRU_FOUND 
	REQUIRED_VARS LIBCTRU_LIBRARY LIBCTRU_INCLUDE_DIR
	VERSION_VAR ${LIBCTRU_VERSION}
)
